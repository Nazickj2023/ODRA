[MASTER]
init-hook=import sys; sys.path.insert(0, 'backend'); sys.path.insert(0, 'workers')
ignore-patterns=test_.*?\.py
disable=missing-module-docstring,missing-function-docstring,line-too-long

[MESSAGES CONTROL]
disable=
    missing-docstring,
    too-few-public-methods,
    duplicate-code

[DESIGN]
max-args=7
max-attributes=10
max-locals=15
